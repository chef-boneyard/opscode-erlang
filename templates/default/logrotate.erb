compress
notifempty
missingok
create 644 opscode opscode
postrotate
  reload rsyslog >/dev/null 2>&1 || true
endscript

<%= @log_dir %>/console.log {
    rotate <%= @console_log_count %>
    size <%= @console_log_mb * 1024 * 1024 %>
}

<%= @log_dir %>/error.log {
    rotate <%= @error_log_count %>
    size <%= @error_log_mb * 1024 * 1024 %>
}
